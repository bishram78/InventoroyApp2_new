<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_24"
    android:paddingLeft="@dimen/padding_24"
    android:paddingTop="@dimen/padding_8"
    android:paddingEnd="@dimen/padding_24"
    android:paddingRight="@dimen/padding_24"
    android:paddingBottom="@dimen/padding_8">

    <ImageView
        android:layout_width="@dimen/width_64"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/cd_product_image"
        android:src="@drawable/inventory_management" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_16"
        android:paddingLeft="@dimen/padding_16"
        android:paddingEnd="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16">

        <TextView
            android:id="@+id/product_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_color_violet"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            tools:text="Product_2345" />

        <TextView
            android:id="@+id/product_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/inr_rupee"
            android:drawableLeft="@drawable/inr_rupee"
            android:textColor="@color/colorPrimaryDark"
            android:drawablePadding="@dimen/padding_8"
            tools:text="INR 23456.83" />

        <TextView
            android:id="@+id/product_quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/quantity"
            android:drawableLeft="@drawable/quantity"
            android:textColor="@color/colorPrimary"
            android:drawablePadding="@dimen/padding_8"
            tools:text="45 Items in stock" />

    </LinearLayout>

    <Button
        android:id="@+id/product_sell_btn"
        android:layout_width="@dimen/width_64"
        android:layout_height="@dimen/height_32"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bkg_round_all"
        android:focusable="false"
        android:text="@string/sell"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>